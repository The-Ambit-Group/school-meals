{
  "extends": "eslint:recommended",
  "ecmaVersion": 6,
  "sourceType": "module",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "impliedStrict": true,
    "experimentalObjectRestSpread": true
  },
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-no-undef" : 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ]
}
